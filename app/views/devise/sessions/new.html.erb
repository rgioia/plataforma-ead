<div class="account-area">
  <div class="d-table">
    <div class="d-table-cell">
      <div class="container">
        <div class="account-content">
          <div class="account-header">
            <%= link_to root_path do %>
              <%= image_tag('main-logo.svg', alt: "main-logo") %>
            <% end %>
            <h3><%= t('.sign_in') %></h3>
          </div>

          <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "account-wrap") do |f| %>
            <div class="form-group mb-24 icon">
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Email" %>
              <%= image_tag('icon/sms.svg', alt: "sms") %>
            </div>
            <div class="form-group mb-24 icon">
              <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "Password" %>
              <%= image_tag('icon/key.svg', alt: "key") %>
            </div>
            <div class="form-group mb-24">
              <%= f.submit t('.sign_in'), class: "default-btn" %>
            </div>
          <% end %>

          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- End Account Area -->
