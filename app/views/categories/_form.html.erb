<div class="panels-area">
  <div class="container-fluid">
    <div class="card-box-style">
      <div class="others-title">
        <div class="page-title-area">
          <div class="container-fluid">
            <div class="row align-items-center">
              <div class="col-lg-6 col-sm-6">
                <div class="page-title">
                  <h3>
                    <%= @category.persisted? ? t('actions.edit') : t('actions.add') %> <%= t('models.category.one') %>
                  </h3>
                </div>
              </div>

              <div class="col-lg-6 col-sm-6">
                <ul class="page-title-list">
                  <li><%= link_to 'Dashboard', root_path %></li>
                  <li><%= link_to 'Categorias', categories_path %></li>
                  <li>
                    <% if link_to @category.persisted? %>
                      <%= link_to t('actions.edit'), edit_category_path(@category) %>
                    <% else %>
                      <%= link_to t('actions.add'), new_category_path %>
                    <% end %>
                  </li>
                </ul>
              </div>
            </div>
          </div>
        </div>
      </div>

      <%= form_for(@category, data: { turbo: false }) do |f| %>
        <div class="form-layouts-area">
          <div class="container-fluid">
            <div class="card-box-style">
              <%= render "devise/shared/error_messages", resource: @category %>
              <div class="pb-24">
                <div class="mb-3">
                  <%= f.label :name, class: 'form-label' %>
                  <%= f.text_field :name, class: 'form-control' %>
                </div>
              </div>

              <div class="row">
                <div class="col-12">
                  <%= f.submit @category.persisted? ? t('actions.edit') : t('actions.add'), class: "btn btn-primary" %>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>